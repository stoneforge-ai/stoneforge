<section class="site-section relative overflow-hidden">
  <!-- Background atmosphere -->
  <div class="absolute inset-0 bg-[var(--site-bg-void)]"></div>
  <div class="absolute inset-0 dot-grid opacity-30"></div>
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--site-border)] to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--site-border)] to-transparent"></div>

  <div class="site-container relative z-10">
    <div class="text-center mb-12" data-reveal>
      <h2 class="text-[clamp(1.75rem,3vw+0.5rem,2.75rem)] font-semibold tracking-[-0.025em] mb-4">
        See it in action
      </h2>
      <p class="text-[var(--site-text-secondary)] max-w-md mx-auto leading-relaxed">Watch agents plan, execute, and merge â€” all coordinated automatically.</p>
    </div>

    <div class="max-w-[960px] mx-auto" data-reveal="scale">
      <!-- Browser chrome mockup -->
      <div
        class="rounded-2xl border border-[var(--site-border-accent)]/60 bg-[var(--site-bg-elevated)] overflow-hidden relative"
        style="box-shadow: 0 0 100px rgba(96,165,250,0.06), 0 30px 100px rgba(0,0,0,0.5), 0 0 0 1px rgba(96,165,250,0.05);"
      >
        <!-- Chrome dots + URL bar -->
        <div class="flex items-center gap-2 px-5 py-3 border-b border-[var(--site-border)] bg-[var(--site-bg-void)]/80">
          <span class="w-3 h-3 rounded-full bg-[#f87171]/30 border border-[#f87171]/20"></span>
          <span class="w-3 h-3 rounded-full bg-[#fbbf24]/30 border border-[#fbbf24]/20"></span>
          <span class="w-3 h-3 rounded-full bg-[#4ade80]/30 border border-[#4ade80]/20"></span>
          <div class="ml-4 flex-1 max-w-xs h-7 rounded-lg bg-[var(--site-bg-surface)] border border-[var(--site-border)] flex items-center px-3">
            <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="var(--site-text-ghost)" stroke-width="2" class="mr-2"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
            <span class="text-[10px] text-[var(--site-text-ghost)] font-mono">localhost:3457</span>
          </div>
        </div>
        <!-- Video placeholder -->
        <div class="relative aspect-video flex items-center justify-center bg-[var(--site-bg-primary)]">
          <div class="absolute inset-0 dot-grid opacity-20"></div>
          <!-- Play button with ring animation -->
          <div class="relative">
            <div class="absolute inset-0 rounded-full animate-ping opacity-20 bg-[var(--site-accent)]" style="animation-duration: 2s;"></div>
            <button class="relative w-20 h-20 rounded-full bg-[var(--site-accent)]/90 flex items-center justify-center hover:bg-[var(--site-accent)] transition-all duration-300 hover:scale-105 hover:shadow-[0_0_40px_rgba(96,165,250,0.3)]" aria-label="Play demo video">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="var(--site-bg-primary)" stroke="none">
                <polygon points="9 5 20 12 9 19 9 5"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>

    <p class="text-center text-xs text-[var(--site-text-ghost)] mt-8 font-mono" data-reveal>
      Demo video coming soon
    </p>
  </div>
</section>
