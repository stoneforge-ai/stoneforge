---
---

<section class="relative overflow-hidden">
  <div class="absolute inset-0 bg-[var(--site-bg-void)]"></div>
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--site-border-accent)]/30 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--site-border-accent)]/30 to-transparent"></div>

  <div class="site-container relative z-10 py-8">
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12" data-reveal>
      <a
        href="https://github.com/stoneforge-ai/stoneforge"
        target="_blank"
        rel="noopener noreferrer"
        class="group inline-flex items-center gap-2.5 text-sm text-[var(--site-text-tertiary)] hover:text-[var(--site-text-primary)] transition-all duration-300"
      >
        <span class="w-8 h-8 rounded-lg bg-[var(--site-bg-elevated)] border border-[var(--site-border)] flex items-center justify-center group-hover:border-[var(--site-border-accent)] transition-colors">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>
          </svg>
        </span>
        <span class="font-medium">GitHub</span>
      </a>

      <div class="w-px h-6 bg-gradient-to-b from-transparent via-[var(--site-border)] to-transparent"></div>

      <a
        href="https://www.npmjs.com/package/@stoneforge/smithy"
        target="_blank"
        rel="noopener noreferrer"
        class="group inline-flex items-center gap-2.5 text-sm text-[var(--site-text-tertiary)] hover:text-[var(--site-text-primary)] transition-all duration-300"
      >
        <span class="w-8 h-8 rounded-lg bg-[var(--site-bg-elevated)] border border-[var(--site-border)] flex items-center justify-center group-hover:border-[var(--site-border-accent)] transition-colors">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22V12"/>
          </svg>
        </span>
        <span class="font-medium">npm</span>
      </a>

      <div class="w-px h-6 bg-gradient-to-b from-transparent via-[var(--site-border)] to-transparent"></div>

      <span class="group inline-flex items-center gap-2.5 text-sm text-[var(--site-text-tertiary)]">
        <span class="w-8 h-8 rounded-lg bg-[var(--site-bg-elevated)] border border-[var(--site-border)] flex items-center justify-center">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/>
          </svg>
        </span>
        <span class="font-medium">Apache 2.0</span>
      </span>
    </div>
  </div>
</section>
