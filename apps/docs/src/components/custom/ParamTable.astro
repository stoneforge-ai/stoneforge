---
interface Param {
  name: string;
  type: string;
  required?: boolean;
  default?: string;
  description: string;
}

interface Props {
  title?: string;
  params: Param[];
  class?: string;
}

const { title, params, class: className = '' } = Astro.props;
---

<div class:list={['sf-param-table', className]}>
  {title && <h4 class="sf-param-table-title">{title}</h4>}
  <div class="sf-param-table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Parameter</th>
          <th>Type</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {params.map(param => (
          <tr>
            <td>
              <code>{param.name}</code>
              {param.required && <span class="sf-param-required">required</span>}
            </td>
            <td><code class="sf-param-type">{param.type}</code></td>
            <td>{param.default ? <code>{param.default}</code> : <span class="sf-param-none">â€”</span>}</td>
            <td>{param.description}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>

<style>
  .sf-param-table {
    margin: 1.5rem 0;
  }

  .sf-param-table-title {
    font-family: var(--sf-font-headline);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-white);
    margin: 0 0 0.75rem;
    padding-left: 0.25rem;
  }

  .sf-param-table-wrapper {
    border: 1px solid var(--sl-color-hairline);
    border-radius: 0.75rem;
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 0;
  }

  th {
    font-family: var(--sf-font-headline);
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--sl-color-gray-3);
    background: var(--sl-color-gray-6);
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--sl-color-hairline);
    text-align: left;
  }

  td {
    padding: 0.625rem 1rem;
    font-size: 0.8125rem;
    border-bottom: 1px solid var(--sl-color-hairline);
    vertical-align: top;
    color: var(--sl-color-text);
  }

  tr:last-child td {
    border-bottom: none;
  }

  td code {
    font-family: var(--sf-font-code);
    font-size: 0.8125rem;
  }

  .sf-param-required {
    display: inline-block;
    margin-left: 0.375rem;
    padding: 0.1rem 0.375rem;
    border-radius: 4px;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sf-error, #f87171);
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.2);
    vertical-align: middle;
  }

  .sf-param-type {
    color: var(--sl-color-accent);
  }

  .sf-param-none {
    color: var(--sl-color-gray-3);
  }
</style>
