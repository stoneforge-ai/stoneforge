{
  "name": "@stoneforge/core",
  "version": "1.10.0",
  "type": "module",
  "description": "Core types, errors, ID generation, and utilities for Stoneforge",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "bun": "./src/types/index.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./errors": {
      "types": "./src/errors/index.ts",
      "bun": "./src/errors/index.ts",
      "import": "./dist/errors/index.js",
      "default": "./dist/errors/index.js"
    },
    "./id": {
      "types": "./src/id/index.ts",
      "bun": "./src/id/index.ts",
      "import": "./dist/id/index.js",
      "default": "./dist/id/index.js"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "bun": "./src/utils/index.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test src",
    "test:node": "vitest run",
    "test:all": "pnpm run test && pnpm run test:node",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoneforge-ai/stoneforge.git",
    "directory": "packages/core"
  },
  "author": "Stoneforge",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stoneforge",
    "types",
    "errors",
    "id-generation"
  ],
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
