{
  "name": "@stoneforge/smithy",
  "version": "1.10.0",
  "type": "module",
  "description": "Orchestrator SDK for Stoneforge - AI agent orchestration library extending the core SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sf": "./dist/bin/sf.js",
    "stoneforge": "./dist/bin/sf.js"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "bun": "./src/types/index.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./services": {
      "types": "./src/services/index.ts",
      "bun": "./src/services/index.ts",
      "import": "./dist/services/index.js",
      "default": "./dist/services/index.js"
    },
    "./runtime": {
      "types": "./src/runtime/index.ts",
      "bun": "./src/runtime/index.ts",
      "import": "./dist/runtime/index.js",
      "default": "./dist/runtime/index.js"
    },
    "./git": {
      "types": "./src/git/index.ts",
      "bun": "./src/git/index.ts",
      "import": "./dist/git/index.js",
      "default": "./dist/git/index.js"
    },
    "./testing": {
      "types": "./src/testing/index.ts",
      "bun": "./src/testing/index.ts",
      "import": "./dist/testing/index.js",
      "default": "./dist/testing/index.js"
    },
    "./providers": {
      "types": "./src/providers/index.ts",
      "bun": "./src/providers/index.ts",
      "import": "./dist/providers/index.js",
      "default": "./dist/providers/index.js"
    },
    "./server": {
      "types": "./src/server/index.ts",
      "bun": "./src/server/index.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    },
    "./skills": "./dist/skills",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc && cp src/prompts/*.md dist/prompts/ && cp -r src/skills dist/skills && chmod +x dist/bin/sf.js",
    "test": "bun test src",
    "test:node": "vitest run",
    "test:all": "pnpm run test && pnpm run test:node",
    "test:orchestration": "bun run src/cli/commands/test-orchestration.ts",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "postinstall": "node scripts/fix-node-pty-permissions.cjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "web",
    "scripts",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoneforge-ai/stoneforge.git",
    "directory": "packages/smithy"
  },
  "author": "Stoneforge",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stoneforge",
    "orchestrator",
    "sdk",
    "agents",
    "ai",
    "coordination",
    "claude"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.45",
    "@stoneforge/core": "workspace:*",
    "@stoneforge/quarry": "workspace:*",
    "@stoneforge/shared-routes": "workspace:*",
    "@stoneforge/storage": "workspace:*",
    "hono": "^4.7.0",
    "node-pty": "^1.1.0",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "@opencode-ai/sdk": "^1.2.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
